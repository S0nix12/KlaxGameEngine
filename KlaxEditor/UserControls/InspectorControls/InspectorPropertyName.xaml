<UserControl x:Class="KlaxEditor.UserControls.InspectorPropertyName"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KlaxEditor.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <TextBlock VerticalAlignment="Center" Name="PropertyName" DockPanel.Dock="Left" HorizontalAlignment="Left">
        <TextBlock.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Reset" Click="Reset_Click" />
            </ContextMenu>
        </TextBlock.ContextMenu>
    </TextBlock>
</UserControl>
